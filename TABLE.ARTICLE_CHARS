CREATE TABLE "ARTICLE_CHARS" 
   (	"ARTICLE_ID" NUMBER, 
	"CONTEXT" VARCHAR2(10), 
	"CHARS_NORMAL" VARCHAR2(200), 
	"CHARS_ITALIC" VARCHAR2(200), 
	"CHARS_BOLD_NORMAL" VARCHAR2(200), 
	"CHARS_BOLD_ITALIC" VARCHAR2(200), 
	 CONSTRAINT "PK_ARTICLE_CHARS" PRIMARY KEY ("ARTICLE_ID", "CONTEXT")
  USING INDEX  ENABLE
   ) ;

  CREATE UNIQUE INDEX "PK_ARTICLE_CHARS" ON "ARTICLE_CHARS" ("ARTICLE_ID", "CONTEXT") 
  ;