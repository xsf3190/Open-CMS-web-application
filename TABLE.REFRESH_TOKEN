CREATE TABLE "REFRESH_TOKEN" 
   (	"USER_ID" NUMBER, 
	"TOKEN_USED" VARCHAR2(64), 
	"TOKEN_ISSUED" VARCHAR2(64), 
	"CREATED_DATE" TIMESTAMP (6) WITH TIME ZONE DEFAULT current_timestamp, 
	 CONSTRAINT "PK_REFRESH_TOKEN" PRIMARY KEY ("USER_ID", "TOKEN_USED")
  USING INDEX  ENABLE
   ) ;

  CREATE UNIQUE INDEX "PK_REFRESH_TOKEN" ON "REFRESH_TOKEN" ("USER_ID", "TOKEN_USED") 
  ;