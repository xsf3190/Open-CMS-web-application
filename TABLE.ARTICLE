CREATE TABLE "ARTICLE" 
   (	"ID" NUMBER, 
	"TITLE" VARCHAR2(60), 
	"AUTHOR_USER_ID" NUMBER, 
	"IS_PUBLIC" VARCHAR2(1) DEFAULT 'N', 
	"EXCERPT" VARCHAR2(160), 
	"WORD_COUNT" NUMBER, 
	"UPDATED_DATE" TIMESTAMP (6) WITH TIME ZONE, 
	"CREATED_DATE" TIMESTAMP (6) WITH TIME ZONE DEFAULT current_timestamp, 
	"BODY" CLOB, 
	"BODY_HTML" CLOB, 
	"CHAR_COUNT" NUMBER, 
	"TITLE_MORE" VARCHAR2(3), 
	"EXCERPT_MORE" VARCHAR2(3), 
	 CONSTRAINT "PK_ARTICLE" PRIMARY KEY ("ID")
  USING INDEX  ENABLE
   ) 
 LOB ("BODY") STORE AS SECUREFILE "LOB_BODY"(ENABLE STORAGE IN ROW CHUNK 8192
  NOCACHE LOGGING  NOCOMPRESS  KEEP_DUPLICATES ) 
 LOB ("BODY_HTML") STORE AS SECUREFILE "LOB_BODY_HTML"(ENABLE STORAGE IN ROW CHUNK 8192
  NOCACHE LOGGING  COMPRESS MEDIUM  KEEP_DUPLICATES ) ;
COMMENT ON TABLE "ARTICLE"  IS 'Editted text in both markdown and html format. Owns any number of digital assets (ASSET table) uploaded to the Cloudinary account of the authenticated user. ';